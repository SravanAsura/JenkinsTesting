pipeline{
    agent any
    
  
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'SravanAsura', url: 'https://github.com/SravanAsura/JenkinsTest.git'
            }
        }
        stage("Build"){
            steps{
                sh "mvn clean package"
                //sh "mv /var/lib/jenkins/workspace/Jenkins/webapp/target/webapp.war webapp/target/webapp.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no webapp/target/webapp.war  ec2-user@172.31.5.176:/apache-tomcat-9.0.64/webapps

                    
                    ssh ec2-user@172.31.5.176 /apache-tomcat-9.0.64
/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.5.176 /apache-tomcat-9.0.64/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}




