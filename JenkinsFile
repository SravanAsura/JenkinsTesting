pipeline{
    agent any
    
  
    stages{
        stage("Git Checkout"){
            steps{
                git 'https://github.com/SravanAsura/JenkinsTest.git'
                
            }
        }
        stage("Build"){
            steps{
                sh "mvn clean package"
                //sh "mv /var/lib/jenkins/workspace/Jenkins/webapp/target/webapp.war webapp/target/webapp.war"
            }  
          
            }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                   
                    
                    
                    cp webapp/target/webapp.war  apache-tomcat-9.0.64/webapps/
       
                    ssh apache-tomcat-9.0.64/bin/shutdown.sh

                    ssh apache-tomcat-9.0.64/bin/startup.sh

                
                """
            }
            
            }
        }
    }
}




